<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_appbar"/>
    <ScrollView
        android:layout_below="@+id/appbar_layout"
        android:layout_above="@+id/add_pic"
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/activity_add_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn tỉnh/Thành phố"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="@color/Gray1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="5dp">
                <Button
                    android:id="@+id/btnContry"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    style="@style/CustomButtonStyle"
                    android:text="Vietnam"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"/>
                <Button
                    android:id="@+id/btnCity"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    style="@style/CustomButtonStyle"
                    android:text="TP.HCM"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"/>
                <Button
                    android:id="@+id/btnDistrict"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    style="@style/CustomButtonStyle"
                    android:text="Chọn quận"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin bắt buộc"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="@color/Gray1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/iconsize"
                    android:layout_height="@dimen/iconsize"
                    android:layout_marginLeft="5dp"
                    android:padding="7dp"
                    android:src="@drawable/ic_home_black"
                    android:id="@+id/imageView2" />

                <EditText
                    android:layout_gravity="center"
                    android:id="@+id/txtLocationName"
                    android:padding="3dp"
                    android:lines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tên địa điểm *"
                    android:textSize="13sp"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/Gray1"
                />
            <LinearLayout
                android:layout_gravity="center"
                android:id="@+id/lnType"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/iconsize"
                    android:layout_height="@dimen/iconsize"
                    android:layout_marginLeft="5dp"
                    android:padding="7dp"
                    android:src="@drawable/ic_restaurant_type"
                    />
                <TextView
                    android:id="@+id/tvChooseType"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tabMedium"
                    android:padding="3dp"
                    android:layout_margin="5dp"
                    android:gravity="right|center"
                    android:text="Chọn loại hình *"
                    android:textStyle="bold"
                    android:textSize="13sp"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"/>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_chevron_right_black_24dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/Gray1"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/white">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/iconsize"
                    android:layout_height="@dimen/iconsize"
                    android:layout_marginLeft="5dp"
                    android:padding="7dp"
                    android:src="@drawable/ic_location_black"
                    />
                <EditText
                    android:layout_gravity="center"
                    android:id="@+id/txt_Address"
                    android:padding="3dp"
                    android:lines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="Địa chỉ *"
                    android:textSize="13sp"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin khác"
                android:textSize="12sp"
                android:padding="8dp"
                android:background="@color/Gray1"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:clickable="true"
                android:id="@+id/ln_jps"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white">
                <ImageView
                    android:layout_width="@dimen/iconsize"
                    android:layout_height="@dimen/iconsize"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:padding="7dp"
                    android:src="@drawable/ic_nearby_black"
                    />
                <RelativeLayout
                    android:layout_weight="0.9"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/txt_name_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tabMedium"
                        android:text="Vị trí bản đồ"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"
                        android:textSize="13sp"/>
                </RelativeLayout>

                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/tv_latlng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tabMedium"
                    android:text="Lat 0.0- Long 0.0"
                    android:textSize="10sp"/>
                <ImageView
                    android:id="@+id/im"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_right_black_24dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/Gray1"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgPhone"
                    android:layout_width="@dimen/iconsize"
                    android:layout_height="@dimen/iconsize"
                    android:layout_marginLeft="5dp"
                    android:padding="7dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_phone_back"
                    />
                <EditText
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/imgPhone"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Số điện thoại"
                    android:lines="1"
                    android:maxLength="20"
                    android:inputType="phone"
                    android:textSize="13sp"
                    android:background="@color/white"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical" />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_plus_green"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/Gray1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/iconsize"
                    android:layout_height="@dimen/iconsize"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:padding="7dp"
                    android:src="@drawable/ic_time_black_2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.9"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="Giờ mở cửa"
                        android:textColor="@color/tabMedium"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnTimeOpen"
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:background="@drawable/tab_custom_green"
                            android:text="9:00 AM"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:text="đến"
                            android:textSize="12sp" />
                        <Button
                            android:id="@+id/btnTimeClose"
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:background="@drawable/tab_custom_green"
                            android:text="9:00 AM"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/Gray1"
                />
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/iconsize"
                    android:layout_height="@dimen/iconsize"
                    android:layout_marginLeft="5dp"
                    android:padding="7dp"
                    android:src="@drawable/ic_price_black_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tabMedium"
                    android:layout_gravity="center"
                    android:text="Mức giá"
                    android:textStyle="bold"
                    android:textSize="13sp"/>

                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_weight="0.9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true">

                        <EditText
                            android:id="@+id/editText"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lines="1"
                            android:inputType="number"
                            android:gravity="center_horizontal"
                            android:hint="Giá thấp nhất"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:text="đến"/>
                        <EditText
                            android:inputType="number"
                            android:lines="1"
                            android:layout_width="90dp"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:hint="Giá cao nhất"
                            android:layout_weight="1"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/Gray1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/iconsize"
                    android:layout_height="@dimen/iconsize"
                    android:layout_marginLeft="5dp"
                    android:padding="7dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_decription"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mô tả ngắn"
                    android:background="@color/white"
                    android:textSize="13sp"
                    android:lines="1"
                    android:inputType="number"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:id="@+id/editText2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/imgViewActionCancel"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right|top"
                        android:layout_marginRight="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_cancel_black_24dp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/add_pic"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        android:layout_height="40dp"
        android:background="@color/theme_light_grey"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/add_img"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_action_name"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:id="@+id/take_img"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_post_review_camera"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>
</RelativeLayout>