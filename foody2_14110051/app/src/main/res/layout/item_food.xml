<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_marginRight="7dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout android:orientation="vertical"
    android:paddingBottom="5dp"
    android:background="@drawable/bgr_item_food"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/imgViewFood"
            android:scaleType="fitXY"
            app:sriv_right_top_corner_radius="4dp"
            app:sriv_left_top_corner_radius="4dp"
            android:layout_width="match_parent"
            android:layout_height="140dp" />
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:text="Heo nuong"
                android:maxLines="1"
                android:textSize="@dimen/text_size_title"
                android:id="@+id/textViewFoodName"
                android:textColor="@color/text_color_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:minLines="1"
                android:text="Am thuc nha hang Sai Gon"
                android:id="@+id/textViewFoodRestaurantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="5dp"
                android:text="180 Bing Quoi, p.28"
                android:singleLine="true"
               android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_address"
                android:id="@+id/textViewFoodItemAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider_recyclerview"/>
        <include layout="@layout/layout_food_comment"/>
</LinearLayout>
</android.support.v7.widget.CardView>